@inherits ViewBase<dynamic>
@using z.ERP.Web.Areas.Share.Render
@using z.MVC5.Views
@{
    Layout = ThisLayout;
}
@{
    WebFiles = new string[] {
                };
}

@section head{
    @InitFiles(WebFiles)
    @RenderSection("head", false)
}
<style>
    .PageNext { page-break-after: always; }
    body, table, td { font-size: 13px; font-family: SimSun; }
    table { table-layout: fixed; empty-cells: show; border-collapse: collapse; margin: 0 auto; }

    .table { border: 1px solid #000; color: #000; }
        .table th { height: 30px; font-weight: normal; }
        .table td, .table th { border: 1px solid #000; /*padding: 0 1em 0;*/ text-align: center; height: 30px; }
    .noborder { border: 0px; color: #000; }

        .noborder h1 { font-size: 20px; text-align: center; }
        .noborder h2 { font-size: 15px; font-weight: normal; text-align: center; }
        .noborder > tr > td { font-size: 12px; text-align: center; height: 12px; }
        .noborder .time { width: 150px; }
        .noborder .height { height: 30px; }
    .textjustify { text-align: justify; text-justify: distribute-all-lines; /*ie6-8*/ text-align-last: justify; /* ie9*/ -moz-text-align-last: justify; /*ff*/ -webkit-text-align-last: justify; /*chrome 20+*/ }
    .style1 { width: 150px; }
    .style2 { text-align: justify; text-justify: distribute-all-lines; /*ie6-8*/; text-align-last: justify; /* ie9*/; -moz-text-align-last: justify; /*ff*/; -webkit-text-align-last: justify; width: 84px; }
    .style4 { width: 96px; }
    #btn_print a { text-decoration: none; background: #2f435e; color: #f2f2f2; padding: 10px 30px 10px 30px; font-size: 16px; font-family: 微软雅黑,宋体,Arial,Helvetica,Verdana,sans-serif; font-weight: bold; border-radius: 3px; -webkit-transition: all linear 0.30s; -moz-transition: all linear 0.30s; transition: all linear 0.30s; margin-top:200px; margin-left: 50%; margin-right: auto; }
</style>
<!--在页面中添加如下代码可以分页-->
<!--<p class="PageNext"></p>-->
<div id="print_Main">
    @RenderSection("content", true)
</div>
<div id="print_control">
    <div id="btn_print">
        <a href="#">打 印</a>
    </div>  
</div>
<script>
    $('#btn_print').click(function () {
        $('#print_control').hide();
        window.print();
        $('#print_control').show();
    });
</script>
@section foot{
    @RenderSection("foot", false)
}
