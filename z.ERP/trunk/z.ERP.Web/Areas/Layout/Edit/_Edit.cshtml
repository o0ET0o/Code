@inherits ViewBase<EditRender>
@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Web.Areas.Layout.EditDetail
@using z.MVC5.Views
@using z.Extensions;
@{
    Layout = ThisLayout;
}
@{
    WebFiles = new string[] {
                    "Areas/Layout/Edit/_Edit.js"
                };
}
@section head{
    @InitFiles(WebFiles)
    @RenderSection("head", false)
}

<div id="EditDetail" style="overflow:hidden;">
    <row>
        <div class="topMenuBtn">
            <yx-tool-bar v-bind:list="list" v-bind:disabled="disabled" v-bind:domdata="dataParam"></yx-tool-bar>
        </div>
    </row>
    <Collapse v-model="collapseValue">
        <Panel name="1">
            基本信息
            <div slot="content">
                <row>
                    <i-col span="2" class="RowTitle">
                        编号
                    </i-col>
                    <i-col span="6" class="RowText">
                        @{
                            RenderControl(new TextBoxRender()
                            {
                                vModel = "dataParam.BILLID",
                                Enable = false
                            });
                        }
                    </i-col>
                    <span v-if="branchid">
                        <i-col span="2" class="RowTitle">
                            分店
                        </i-col>
                        <i-col span="6" class="RowText">
                            @{
                                RenderControl(new ServiceDropDownListRender()
                                {
                                    vModel = "dataParam.BRANCHID",
                                    ServiceMothod = m => m.branch(),
                                });
                            }
                        </i-col>
                    </span>
                </row>
                @RenderSection("baseParam", false)
            </div>
        </Panel>
        <Panel name="2" v-if="otherPanel">
            其它信息
            <div slot="content">
                @RenderSection("detailParam", false)
            </div>
        </Panel>
    </Collapse>
    <div class="hide">
        @RenderSection("hide", false)
        @RenderSection("pops", false)
    </div>
</div>

@section foot{
    @RenderSection("foot", false)
}
@{
    if (Model != null && !string.IsNullOrEmpty(Model?.Id))
    {
        <script type="text/javascript">
            $(function() {
                editDetail.Id = "@Model.Id";
            });
        </script>
    }
}