@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.DefineDetail
@inherits DefineDetailViewBase

@section baseParam{
    <row>
        <i-col span="5" class="RowTitle">
            门店
        </i-col>
        <i-col span="17">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "dataParam.BRANCHID",
                    ServiceMothod = m => m.branch(),
                    Enable = true

                });
            }
        </i-col>
    </row>
    <row>

        <i-col span="5" class="RowTitle">
            票头文字
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="dataParam.HEAD" v-bind:disabled="!disabled" />
        </i-col>

        <i-col span="5" class="RowTitle">
            票尾文字
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="dataParam.TAIL" v-bind:disabled="!disabled" />
        </i-col>

    </row>

    <row>
        <i-col span="5" class="RowTitle">
            二维码广告位
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="dataParam.ADQRCODE" v-bind:disabled="!disabled" />
        </i-col>

        <i-col span="5" class="RowTitle">
            文字广告位
        </i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="dataParam.ADCONTENT" v-bind:disabled="!disabled" />
        </i-col>
    </row>

}
