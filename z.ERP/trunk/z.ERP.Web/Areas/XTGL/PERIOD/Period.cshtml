@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Empty
@inherits EmptyViewBase

@section btn{
    @{
        RenderControl(new ButtonRender()
        {
            Click = "mod",
            Text = "修改",
            //Enable = false
        });
    }
    @{
        RenderControl(new ButtonRender()
        {
            Click = "save",
            Text = "存档",
            Enable = false
        });
    }
    @{
        RenderControl(new ButtonRender()
        {
            Click = "quit",
            Text = "放弃",
            Enable = false
        });
    }
}

@section content{
    <row>
        <i-col span="10" >
            <i-table border :columns="colDef" :data="dataDef" size="small" style="width:450px"></i-table>
        </i-col>
        <i-col span="13">
            <row>
                <i-col span="5" class="RowTitle">年度</i-col>
                <i-col span="8">
                    @*@{
                        RenderControl(new EnumDropDownListRender<支付方式类型>()
                        {
                            vModel = "jzqj.CODE",
                            Enable = false
                        });
                    }*@
                    <i-select v-model="Year" v-on:on-change="getPeriod" :disabled="!disabled">
                        <i-option v-for="item in nyList" :value="item.value">{{ item.label }}</i-option>
                    </i-select>
                </i-col>
            </row>
            <row>
                <i-col span="5" class="RowTitle">每月结束日</i-col>
                <i-col span="8">                    
                    @{
                        RenderControl(new TextBoxRender
                        {
                            vModel = "jzqj.LASTDAY",
                            Id = "tb_name",
                            Enable = false
                        });
                    }
                </i-col>
            </row>
            <row>
                <i-col span="5" class="RowTitle"></i-col>
                <i-col span="8">
                    <Checkbox v-model="jzqj.Natrual" v-on:on-change="change()" :disabled="disabled">自然月</Checkbox>
                </i-col>
                </row>
        </i-col>    

    </row>
}
