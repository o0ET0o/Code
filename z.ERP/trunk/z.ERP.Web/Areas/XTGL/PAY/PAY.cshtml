@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@inherits z.MVC5.Views.DefineViewPage

@section element{
    <row>
        <i-col span="2" class="RowTitle">
            代码
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.PAYID",
                    disabled = "true"
                });
            }
        </i-col>
    </row>

    <br />

    <row>
        <i-col span="2" class="RowTitle">
            名称
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.NAME",
                    disabled = "disabled"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            类型
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<支付方式类型>()
                {
                    vModel = "dataParam.TYPE",
                    disabled = "disabled"
                });
            }
        </i-col>
    </row>

    <br />

    <row>
        <i-col span="2" class="RowTitle">
            返款
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<收款方式返款>()
                {
                    vModel = "dataParam.FK",
                    disabled = "disabled"
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">
            积分
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<收款方式积分>()
                {
                    vModel = "dataParam.JF",
                    disabled = "disabled"
                });
            }
        </i-col>
    </row>
    <br />
    <row>
        <i-col span="2" class="RowTitle">
            找零方式
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<收款方式找零方式>()
                {
                    vModel = "dataParam.ZLFS",
                    disabled = "disabled"
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">
            显示序号
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.FLAG",
                    disabled = "disabled"
                });
            }
        </i-col>
    </row>
    <br />
    <row>
        <i-col span="2" class="RowTitle">
            停用标记
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumCheckBoxListRender<停用标记>()
                {
                    vModel = "dataParam.VOID_FLAG",
                    MultiSelect = false,
                    disabled = "disabled"
                });
            }
        </i-col>
    </row>
}
