@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Define
@inherits DefineViewBase

@section head{
    <script src="~/Areas/Pop/PopContract/PopContract.js"></script>
}

@section element{

    <row>
        <i-col>
            @{
                RenderControl(new ButtonRender()
                {
                    Click = "screenParam.Merchant",
                    Text = "商户",
                    Enable = true,
                    Type = "primary"
                });
            }
            @{
                RenderControl(new PopRender()
                {
                    vModel = "screenParam.PopMerchant", //当前页面随便写
                    Caption = "商户查询",   //随便写切实实际情况
                    Width = "760",          //随便写切实实际情况
                    PopLx = "Contract",     //需要调用的弹窗
                    CallBack = "screenParam.MerchantBack", //返回后方法
                    ParentObj= "screenParam.ParentMerchant" //传入参数随便写在按钮点击的时候给其值
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            @*@{
                RenderControl(new WindowButtonRender()
                {
                    WindowModel = "windowParam.terst",
                    Text = "代码"
                });
            }*@
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.PAYID"
                });
            }
        </i-col>
    </row>

    <row>
        <i-col span="2" class="RowTitle">
            名称
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.NAME",
                    Enable = false
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            类型
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<支付方式类型>()
                {
                    vModel = "dataParam.TYPE",
                    Enable = false
                });
            }
        </i-col>
    </row>

    <row>
        <i-col span="2" class="RowTitle">
            返款
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<收款方式返款>()
                {
                    vModel = "dataParam.FK",
                    Enable = false
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">
            积分
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<收款方式积分>()
                {
                    vModel = "dataParam.JF",
                    Enable = false
                });
            }
        </i-col>
    </row>

    <row>
        <i-col span="2" class="RowTitle">
            找零方式
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<收款方式找零方式>()
                {
                    vModel = "dataParam.ZLFS",
                    Enable = false
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">
            显示序号
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.FLAG",
                    Enable = false
                });
            }
        </i-col>
    </row>

    <row>
        <i-col span="2" class="RowTitle">
            停用标记
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumCheckBoxListRender<停用标记>()
                {
                    vModel = "dataParam.VOID_FLAG",
                    MultiSelect = false,
                    Enable = false
                });
            }
        </i-col>
    </row>

}

@section search{
    <row>
        <i-col span="2" class="RowTitle">
            代码
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.PAYID",
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            名称
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new UndefineRender()
                {
                    vModel = "searchParam.NAME"
                });
            }
        </i-col>
    </row>
}

