@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Define
@inherits DefineViewBase
@section head{
    <style>
        #zzc {
            width: 100%;
            height: 330px;
            position: absolute;
            background-color: #F3F3F3;
            z-index: 10;
            opacity: 0.6;
        }
    </style>
}
@section search{
    <row>
        <i-col span="5" class="RowTitle">门店</i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new DropDownListsRender()
                {
                    vModel = "searchParam.BRANCHID",
                    Data = "screenParam.branchData",
                    EmptyText = "",
                    Change = "branchChange",
                });
            }
        </i-col>
        <i-col span="5" class="RowTitle">终端号</i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.STATIONBH"
                });
            }
        </i-col>
    </row>
}

@section element{
    <row>
        <i-col span="3" class="RowTitle">
            终端号
        </i-col>
        <i-col span="5" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.STATIONBH",
                    Enable = false
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            类型
        </i-col>
        <i-col span="5" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<POS类型>
                {
                    vModel = "dataParam.TYPE",
                    Enable = false
                });
            }
        </i-col>
        <i-col span="3" class="RowTitle">
            店铺
        </i-col>
        <i-col span="5" class="RowText">
            <i-input readonly v-bind:icon="disabled? '':'md-search'"
                     v-model="dataParam.SHOPCODE" v-on:on-click="SelShop"
                     v-bind:disabled="disabled? true:false" />
        </i-col>        

    </row>
    <row>
        <i-col span="3" class="RowTitle">
            MAC地址
        </i-col>
        <i-col span="5" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.NETWORK_NODE_ADDRESS",
                    Enable = false,
                    keyup="atoA"
                });
            }
        </i-col>
        <i-col span="3" class="RowTitle">
            IP地址
        </i-col>
        <i-col span="5" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.IP",
                    Enable = false
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="3" class="RowTitle">
            <span class="mustElement">*</span>
            收款方式
        </i-col>
        
        <i-col span="10">  
            <div id="zzc" v-if="disabled"></div>      
        <i-table  size="small" border height="330"
                    v-bind:columns="screenParam.payColDef" v-bind:data="screenParam.STATION_PAY_DATA"
                    v-on:on-select="screenParam.selectData"
                    v-on:on-select-all="screenParam.selectDataAll"
                    v-on:on-select-cancel="screenParam.selectCancel"></i-table>
       </i-col>
    </row>
}

@section pops{
<yx-modal v-bind:src="screenParam.srcPop" v-bind:title="screenParam.title" width="800"
          v-bind:modal-visible.sync="screenParam.showPop"></yx-modal>
}








