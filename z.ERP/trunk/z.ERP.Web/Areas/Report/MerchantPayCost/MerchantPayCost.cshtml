@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Web.Areas.Layout.Srch;
@using z.ERP.Entities.Enum;
@inherits SrchViewBase
@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">
            查询类型
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<列表或汇总>()
                {
                    vModel = "searchParam.SrchTYPE",
                    Change = "changeSrchType",
                    EmptyText = "普通列表"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            门店
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.BRANCHID",
                    ServiceMothod = m => m.branch(),
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            收费项目
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.TRIMID",
                    ServiceMothod = m => m.feesubject(),
                    Multiple = true
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            商户
        </i-col>
        <i-col span="6" class="RowText">
            <i-input readonly icon="md-search" v-model="searchParam.MERCHANTNAME" v-on:on-click="SelMerchant" />
        </i-col>
        <i-col span="2" class="RowTitle">
            品牌
        </i-col>
        <i-col span="6" class="RowText">
            <i-input readonly icon="md-search" v-model="searchParam.BRANDNAME" v-on:on-click="SelBrand" />
        </i-col>
        <i-col span="2" class="RowTitle">
            是否已付清
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<是否已付清>()
                {
                    vModel = "searchParam.ISpay",
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            债权发生月
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new YearMonthBoxRender()
                {
                    vModel = "searchParam.YEARMONTH_START"
                });
            }
        </i-col>
        <i-col span="3" class="RowText">
            @{
                RenderControl(new YearMonthBoxRender()
                {
                    vModel = "searchParam.YEARMONTH_END"
                });
            }
        </i-col>
    </row>
}

@section pops{
    <row>
        <i-col>
            @{
                RenderControl(new PopsRender()
                {
                    vModel = "screenParam.showPopMerchant",
                    Caption = "选择商户",
                    Width = "900",
                    Src = "screenParam.srcPopMerchant"
                });
            }
        </i-col>
    </row>
    <row>
        <i-col>
            @{
                RenderControl(new PopsRender()
                {
                    vModel = "screenParam.showPopBrand",
                    Caption = "选择品牌",
                    Width = "900",
                    Src = "screenParam.srcPopBrand"
                });
            }
        </i-col>
    </row>
}