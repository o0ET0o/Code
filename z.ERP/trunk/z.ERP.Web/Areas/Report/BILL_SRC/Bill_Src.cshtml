@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Web.Areas.Layout.Srch;
@using z.ERP.Entities.Enum;
@inherits SrchViewBase
@section conditionParam{

    <row>
        <i-col span="3" class="RowTitle">门店</i-col>
        <i-col span="4" class="RowText">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.BRANCHID",
                    ServiceMothod = m => m.branch(),

                });
            }
        </i-col>

        <i-col span="3" class="RowTitle">
            商户
        </i-col>
        <i-col span="4" class="RowText">
            <i-input readonly icon="md-search" v-model="searchParam.MERCHANTNAME" v-on:on-click="SelMerchant" />
        </i-col>

        <i-col span="3" class="RowTitle">
            租约
        </i-col>
        <i-col span="4" class="RowText">
            <i-input readonly icon="md-search" v-model="searchParam.CONTRACTID" v-on:on-click="SelContract" />
        </i-col>
       
    </row>

    <row>
        <i-col span="3" class="RowTitle">账单号</i-col>
        <i-col span="4" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.BILLID",
                });
            }
        </i-col>


        <i-col span="3" class="RowTitle">账单类型</i-col>
        <i-col span="4" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<账单类型>()
                {
                    vModel = "searchParam.TYPE",

                });
            }
        </i-col>

        <i-col span="3" class="RowTitle">账单状态</i-col>
        <i-col span="4">
            @{
                RenderControl(new EnumDropDownListRender<账单状态>()
                {
                    vModel = "searchParam.STATUS",
                });
            }
        </i-col>
    </row>

    <row>
        <i-col span="3" class="RowTitle">收费项目名称 </i-col>
        <i-col span="4" class="RowText">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.TRIMID",
                    ServiceMothod = m => m.feesubject(),
                    Multiple = true
                });
            }
        </i-col>

        <i-col span="3" class="RowTitle">
            收付实现月
        </i-col>
        <i-col span="4" class="RowText">
            @{
                RenderControl(new YearMonthBoxRender()
                {
                    vModel = "searchParam.YEARMONTH_START"
                });
            }
        </i-col>

        <i-col span="3" class="RowTitle">
            权责发生月
        </i-col>
        <i-col span="4" class="RowText">
            @{
                RenderControl(new YearMonthBoxRender()
                {
                    vModel = "searchParam.NIANYUE_START"         
                });
            }
        </i-col>



    </row>

}

@section pops{
    <row>
        <i-col>
            @{
                RenderControl(new PopsRender()
                {
                    vModel = "screenParam.showPopMerchant",
                    Caption = "选择商户",
                    Width = "900",
                    Src = "screenParam.srcPopMerchant"
                });
            }
        </i-col>
    </row>

<row>
    <i-col>
        @{
            RenderControl(new PopsRender()
            {
                vModel = "screenParam.showPopContract",
                Caption = "选择租约",
                Width = "900",
                Src = "screenParam.srcPopContract"
            });
        }
    </i-col>
</row>

}