@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Empty
@inherits EmptyViewBase

@section btn{
    @{
        RenderControl(new ButtonRender()
        {
            Click = "exportPz",
            Text = "导出",     
        });
    }
}

@section content{
    <row>
        <i-col span="8">
            <div ref="tableHeight">
                <card style="height:100%">
                    @*<p slot="title">列表信息</p>*@
                    <div style="height:8%">      
                        
                    </div>
                    <i-table :highlight-row="true" size="small" :border="true" 
                             :columns="colDef" :data="dataDef"></i-table>
                </card>
            </div>
        </i-col>
        <i-col span="16">
            <div ref="cardHeigth">
                <card class="elementcard" style="height:500px">
                    @*<p slot="title">包含元素</p>*@
                    <row>
                        <i-col span="3" class="RowTitle">                            
                            分店
                        </i-col>
                        <i-col span="8">
                            @{
                                RenderControl(new ServiceDropDownListRender()
                                {
                                    vModel = "BRANCHID",
                                    ServiceMothod = m => m.branch(),
                                });
                            }
                        </i-col>
                    </row>
                    <row>
                        <i-col span="3" class="RowTitle">                            
                            年月
                        </i-col>
                        <i-col span="8">
                            @{
                                RenderControl(new TextBoxRender()
                                {
                                    vModel = "NY_START",
                                });
                            }
                        </i-col>
                        <i-col span="8">
                            @{
                                RenderControl(new TextBoxRender()
                                {
                                    vModel = "NY_END",
                                });
                            }
                        </i-col>
                    </row>
                    <row>
                        <i-col span="3" class="RowTitle">
                            日期
                        </i-col>
                        <i-col span="8">
                            @{
                                RenderControl(new DateBoxRender()
                                {
                                    vModel = "RQ_START"
                                });
                            }
                        </i-col>
                        <i-col span="8">
                            @{
                                RenderControl(new DateBoxRender()
                                {
                                    vModel = "RQ_END"
                                });
                            }
                        </i-col>
                    </row>
                </card>
            </div>
        </i-col>
    </row>
}