@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Search
@inherits SearchViewBase

@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">
            代码
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.ID",
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            名称
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.NAME",
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            业态
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new CascaderRender()
                {
                    vModel = "searchParam.CATEGORY",
                    Data = "searchParam.CATEData",
                    Change = "orgChange",
                    Not_level_last = true
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            地址
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.ADRESS",
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            联系人
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.CONTACTPERSON",
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            电话
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.PHONENUM",
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            邮编
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.PIZ",
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            微信
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.WEIXIN",
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            QQ
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.QQ",
                });
            }
        </i-col>
    </row>
}