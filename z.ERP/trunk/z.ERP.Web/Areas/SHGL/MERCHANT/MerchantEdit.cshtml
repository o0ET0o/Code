@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.EditDetail;
@inherits EditDetailViewBase

@section baseParam{
<row>
    <i-col span="2" class="RowTitle">
        名称
    </i-col>
    <i-col span="22">
        @{
            RenderControl(new TextBoxRender()
            {
                vModel = "dataParam.NAME"
            });
        }
    </i-col>
</row>

<row>
    <i-col span="2" class="RowTitle">
        税号
    </i-col>
    <i-col span="6">
        @{
            RenderControl(new TextBoxRender()
            {
                vModel = "dataParam.SH"
            });
        }
    </i-col>
    <i-col span="2" class="RowTitle">
        银行账号
    </i-col>
    <i-col span="6">
        @{
            RenderControl(new TextBoxRender()
            {
                vModel = "dataParam.BANK"
            });
        }
    </i-col>
    <i-col span="2" class="RowTitle">
        银行名称
    </i-col>
    <i-col span="6">
        @{
            RenderControl(new TextBoxRender()
            {
                vModel = "dataParam.BANK_NAME"
            });
        }
    </i-col>
</row>

}
