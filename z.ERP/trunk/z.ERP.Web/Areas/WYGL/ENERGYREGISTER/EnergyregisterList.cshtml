@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Web.Areas.Layout.Search
@using z.ERP.Entities.Enum

@inherits SearchViewBase
@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">
            单据号
        </i-col>
        <i-col span="6" class="RowText">
            
            @{ 
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.BILLID"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            抄表日期起
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.CHECK_DATE_START"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            抄表日期止
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.CHECK_DATE_END"
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            开始年月
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.YEARMONTH_START"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            结束年月
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.YEARMONTH_END"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            状态
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<普通单据状态>()
                {
                    vModel = "searchParam.STATUS",
                });
            }
        </i-col>
        @*<i-col span="2" class="RowTitle">
            状态
        </i-col>
        <i-col span="4">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.STATUS"
                });
            }
        </i-col>*@
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            登记人
        </i-col>
        <i-col span="6" class="RowText">
            <i-input readonly v-bind:icon="disabled? 'md-search':''"
                     v-model="searchParam.REPORTERNAME" v-on:on-click="SelSysuser" />
        </i-col>

            @* <i-col span="2" class="RowTitle">
                登记人
            </i-col>
            <i-col span="4">
                @{
                    RenderControl(new TextBoxRender()
                    {
                        vModel = "searchParam.REPORTER"
                    });
                }
            </i-col> *@
            <i-col span="2" class="RowTitle">
                登记时间_起
            </i-col>
            <i-col span="6" class="RowText">
                @{
                    RenderControl(new DateBoxRender()
                    {
                        vModel = "searchParam.REPORTER_TIME_START"
                    });
                }
            </i-col>
            <i-col span="2" class="RowTitle">
                登记时间_止
            </i-col>
            <i-col span="6" class="RowText">
                @{
                    RenderControl(new DateBoxRender()
                    {
                        vModel = "searchParam.REPORTER_TIME_END"
                    });
                }
            </i-col>
</row>
    <row>
      @*  <i-col span="2" class="RowTitle">
            审核人
        </i-col>
        <i-col span="4">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.VERIFY"
                });
            }
        </i-col>  *@

        <i-col span="2" class="RowTitle">
            审核人
        </i-col>
        <i-col span="6" class="RowText">
            <i-input readonly v-bind:icon="disabled? 'md-search':''"
                     v-model="searchParam.VERIFYNAME" v-on:on-click="SelSysuser_sh" />
        </i-col>

        <i-col span="2" class="RowTitle">
            审核时间_起
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.VERIFY_TIME_START"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            审核时间_止
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.VERIFY_TIME_END"
                });
            }
        </i-col>
    </row>   
}


@section pops{
    <row>
        <i-col>
            @{
                RenderControl(new PopsRender()
                {
                    vModel = "screenParam.showPopSysuser",
                    Src = "screenParam.srcPopSysuser",
                    Caption = "选择人员",
                    Width = "800"
                });
            }
        </i-col>
    </row>
}

