@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Web.Areas.Layout.EditDetail;
@using z.ERP.Entities.Enum
@inherits EditDetailViewBase<string>

@section head{

    @InitFiles(new string[] {
    "/Areas/Pop/PopMerchant.js",
    });
}

@section baseParam{
    <row>
        <i-col span="2" class="RowTitle">
            被投诉部门
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "dataParam.DEPTID",
                    ServiceMothod = m => m.org_zs()
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            @{
                RenderControl(new ButtonRender()
                {
                    Click = "SelShop",
                    Text = "店铺",
                    Enable = true,
                    Type = "primary"
                });
            }
        </i-col>

        @*<i-col span="2" class="RowTitle">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.SHOPID",
                    Enable = true
                });
            }
        </i-col>*@ 
        <i-col span="2" class="RowTitle">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.CODE",
                    Enable = true
                });
            }
        </i-col>
        <i-col span="4" class="RowTitle">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.NAME",
                    Enable = true
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            @{
                RenderControl(new ButtonRender()
                {
                    Click = "SelBrand",
                    Text = "品牌",
                    Enable = true,
                    Type = "primary"
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.BRANDID",
                    Enable = true
                });
            }
        </i-col>
        <i-col span="4" class="RowTitle">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.BRANDNAME",
                    Enable = true
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            被投诉人
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.PERSON_NAME",
                    Enable = true
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            <span class="mustElement">*</span>
            投诉处理部门
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "dataParam.CPLAINDEPT",
                    ServiceMothod = m => m.comPlainDept()
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            <span class="mustElement">*</span>
            投诉类型
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "dataParam.CPLAINTYPE",
                    ServiceMothod = m => m.comPlainType()
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            <span class="mustElement">*</span>
            投诉日期
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "dataParam.CPLAINDATE"
                });
            }
        </i-col>    
        <i-col span="2" class="RowTitle">            
            投诉人
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.CPLAINPERSON_NAME"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            投诉人电话
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.CPLAINPHONE"
                });
            }
        </i-col>                         
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            投诉内容
        </i-col>
        <i-col span="14">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.CPLAINTEXT",
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            处理结果
        </i-col>
        <i-col span="14">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.DISPOSERESULT",
                });
            }
        </i-col>
    </row>

    <row>
        <i-col span="2" class="RowTitle">
            描述
        </i-col>
        <i-col span="14">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.DESCRIPTION",
                });
            }
        </i-col>
    </row>
}

@section detailParam{

}

@section pops{
    <row>
        <i-col>
            @{
                RenderControl(new PopsRender()
                {
                    vModel = "screenParam.showPopBrand",
                    Caption = "选择品牌",
                    Width = "900",
                    Src = "screenParam.srcPopBrand"
                });
            }
        </i-col>
    </row>

    <row>
        <i-col>
            @{
                RenderControl(new PopsRender()
                {
                    vModel = "screenParam.showPopShop",
                    Caption = "选择店铺",
                    Width = "900",
                    Src = "screenParam.srcPopShop"
                });
            }
        </i-col>
    </row>

}