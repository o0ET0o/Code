                });
            }
        </i-col>
    </row>
    <row>

    </row>

    <row>
        <i-col span="2" class="RowTitle">
            @{
                RenderControl(new ButtonRender()
                {
                    Click = "SelSysuser",
                    Text = "登记人",
                    Enable = true,
                    Type = "primary"
                });
            }
        </i-col>
        <i-col span="4">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.REPORTERNAME",
                    Enable = false
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">
            登记时间_起
        </i-col>
        <i-col span="4">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.REPORTER_TIME_START"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            登记时间_止
        </i-col>
        <i-col span="4">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.REPORTER_TIME_END"
                });
            }
        </i-col>
    </row>

