@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Search;
@inherits SearchViewBase
@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">单号</i-col>
        <i-col span="6" class="RowTitle">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.BILLID"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">分店</i-col>
        <i-col span="6" class="RowTitle">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.BRANCHID",
                    ServiceMothod = m => m.branch(),
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            状态
        </i-col>
        <i-col span="3" class="RowTitle">
            @{
                RenderControl(new EnumDropDownListRender<普通单据状态>()
                {
                    vModel = "searchParam.STATUS",
                });
            }
        </i-col>
    </row>

    <row>
        <i-col span="2" class="RowTitle">
            @{
                RenderControl(new ButtonRender()
                {
                    Click = "SelMerchant",
                    Text = "商户",
                    Enable = true,
                    Type = "primary"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.MERCHANTID",
                    Enable = true
                });
            }
        </i-col>
        <i-col span="4" class="RowTitle">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.MERCHANTNAME",
                    Enable = true
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            @{
                RenderControl(new ButtonRender()
                {
                    Click = "SelBrand",
                    Text = "品牌",
                    Enable = true,
                    Type = "primary"
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.BRANDID",
                    Enable = true
                });
            }
        </i-col>
        <i-col span="4" class="RowTitle">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.BRANDNAME",
                    Enable = true
                });
            }
        </i-col>

    </row>


    <row>
        <i-col span="2" class="RowTitle">
            记账日期
        </i-col>
        <i-col span="3" class="RowTitle">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.ACCOUNT_DATE_START"
                });
            }
        </i-col>
        <i-col span="3" class="RowTitle">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.ACCOUNT_DATE_END"
                });
            }
        </i-col>

    </row>
    <row>
        <i-col span="2" class="RowTitle">
            登记人
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.REPORTER"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            登记时间
        </i-col>
        <i-col span="3" class="RowTitle">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.REPORTER_TIME_START"
                });
            }
        </i-col>
        <i-col span="3" class="RowTitle">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.REPORTER_TIME_END"
                });
            }
        </i-col>

    </row>
    <row>
        <i-col span="2" class="RowTitle">
            审核人
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.VERIFY"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            审核时间
        </i-col>
        <i-col span="3" class="RowTitle">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.VERIFY_TIME_START"
                });
            }
        </i-col>
        <i-col span="3" class="RowTitle">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.VERIFY_TIME_END"
                });
            }
        </i-col>

    </row>
}



@section pops{
    <row>
        <i-col>
            @{
                RenderControl(new PopsRender()
                {
                    vModel = "screenParam.showPopMerchant",
                    Caption = "选择商户",
                    Width = "900",
                    Src = "screenParam.srcPopMerchant"
                });
            }
        </i-col>
    </row>
    <row>
        <i-col>
            @{
                RenderControl(new PopsRender()
                {
                    vModel = "screenParam.showPopBrand",
                    Caption = "选择品牌",
                    Width = "900",
                    Src = "screenParam.srcPopBrand"
                });
            }
        </i-col>
    </row>

}