@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Web.Areas.Layout.Edit
@using z.ERP.Entities.Enum
@inherits EditViewBase<string>

@section head{

    @InitFiles(new string[] {
    "/Areas/Pop/PopMerchant.js",
    "/Areas/Pop/PopContract.js",
    "/Areas/Pop/PopBrand.js",
    "/Areas/Pop/PopShop.js",
    "/Areas/Pop/PopFeeSubject.js",
});
}

@section baseParam{
    <row>
        <i-col>
            @{
                RenderControl(new PopRender()
                {
                    vModel = "screenParam.PopContract",
                    Caption = "合同查询",
                    Width = "760",
                    PopLx = "Contract",
                    CallBack = "ContractBack",
                    ParentObj = "screenParam.ParentContract"
                });
            }
        </i-col>
        <i-col>
            @{
                RenderControl(new PopRender()
                {
                    vModel = "screenParam.PopBrand",
                    Caption = "品牌查询",
                    Width = "760",
                    PopLx = "Brand",
                    CallBack = "BrandBack",
                    ParentObj = "screenParam.ParentBrand"
                });
            }
        </i-col>
    </row>
    <row>
        @*<i-col span="2" class="RowTitle">
            商品代码
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.GOODDM",
                });
            }
        </i-col>*@
        <i-col span="2" class="RowTitle">
            商品条码
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.BARCODE",
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            类型
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<商品类型>
                {
                    vModel = "dataParam.TYPE",
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            名称
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.NAME",
                    Change = "Getpym"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            拼音码
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.PYM",
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            经营方式
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.STYLEMC",
                    Readonly = "true"
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            @{
                RenderControl(new ButtonRender()
                {
                    Click = "Contract",
                    Text = "租约",
                    Enable = true,
                    Type = "primary"
                });
            }
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.CONTRACTID",
                    Enter = "htChange"
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">
            商户
        </i-col>
        <i-col span="2">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.MERCHANTID",
                    Readonly = "true"
                });
            }
        </i-col>
        <i-col span="4">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.SHMC",
                    Readonly = "true"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            进项税率
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.JXSL",
                  //  Readonly = "true"
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            @{
                RenderControl(new ButtonRender()
                {
                    Click = "Brand",
                    Text = "品牌",
                    Enable = true,
                    Type = "primary"
                });
            }
        </i-col>

        <i-col span="2">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.BRANDID",
                });
            }
        </i-col>
        <i-col span="4">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.BRANDMC",
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            商品分类
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new CascaderRender()
                {
                    vModel = "screenParam.Kind",
                    Data= "screenParam.dataKind",
                    Change= "changeKind"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            销项税率
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.XXSL",
                  //  Readonly = "true"
                });
            }
        </i-col>

    </row>
    <row>
        <i-col span="2" class="RowTitle">
            地区
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.REGION",
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            单价
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.PRICE",
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">
            会员单价
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.MEMBER_PRICE",
                });
            }
        </i-col>
    </row>

    <row>
        <i-col span="2" class="RowTitle">
            描述
        </i-col>
        <i-col span="14">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.DESCRIPTION",
                });
            }
        </i-col>       
    </row>

}

@section detailParam{
    <row>
        <i-table size="small" :border="true"
                 :columns="screenParam.colDef" :data="dataParam.GOODS_SHOP"></i-table>
    </row>
}