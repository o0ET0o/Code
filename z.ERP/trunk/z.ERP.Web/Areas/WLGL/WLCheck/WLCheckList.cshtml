@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Search;
@inherits SearchViewBase
@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">供货商代码</i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.MERCHANTID",
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">供货商名称</i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.NAME",
                });
            }
        </i-col>

    </row>

    <row>
        <i-col span="2" class="RowTitle">
            @{
                RenderControl(new ButtonRender()
                {
                    Click = "SelReporter",
                    Text = "登记人",
                    Enable = true,
                    Type = "primary"
                });
            }
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.REPORTER_NAME"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            @{
                RenderControl(new ButtonRender()
                {
                    Click = "SelVerify",
                    Text = "审核人",
                    Enable = true,
                    Type = "primary"
                });
            }
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.VERIFY_NAME"
                });
            }
        </i-col>
    </row>

}



@section pops{
    <row>
        <i-col>
            @{
                RenderControl(new PopsRender()
                {
                    vModel = "screenParam.showPopSysuser",
                    Src = "screenParam.srcPopSysuser",
                    Caption = "选择人员",
                    Width = "800"
                });
            }
        </i-col>
    </row>
}
