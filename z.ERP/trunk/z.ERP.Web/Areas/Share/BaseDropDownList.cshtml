@using z.ERP.Web.Areas.Share.Render
@inherits z.MVC5.Views.ControlViewBase<DropDownListRender>

<i-select v-model="@Model.vModel">
    @{
        if (!Model.EmptyText.IsEmpty())
        {
            <i-option value="">@Model.EmptyText</i-option>
        }
        foreach (var item in Model.Data)
        {
            if (item.IsSelected || item.Key == Model.Value)
            {
                <i-option value="@item.Key">@item.Value</i-option>
            }
            else
            {
                <i-option value="@item.Key">@item.Value</i-option>
            }
        }
    }
</i-select>
