@using z.ERP.Web.Areas.Share.Render
@using z.Extensions
@inherits z.ERP.Web.Areas.Share.ControlViewBase<CheckBoxListRender>

@if (Model.MultiSelect)
{
    <checkbox-group v-model="@Model.vModel" v-on:on-change="@Model.Change">
        @{
            foreach (var item in Model.Data)
            {
                if (Model.DisableValue.Has(item.Value))
                {
                    <checkbox v-bind:label="@item.Key" :disabled="@(Model.Enable?"!disabled":"disabled")">@item.Value</checkbox>
                }
                else
                {
                    <checkbox v-bind:label="@item.Key" :disabled="@(Model.Enable?"!disabled":"disabled")">@item.Value</checkbox>
                }
            }
        }
    </checkbox-group>
}
else
{
    <radio-group v-model="@Model.vModel">
        @{
            foreach (var item in Model.Data)
            {
                if (Model.DisableValue.Has(item.Value))
                {
                    <radio label="@item.Key" :disabled="@(Model.Enable?"!disabled":"disabled")">@item.Value</radio>
                }
                else
                {
                    <radio label="@item.Key" :disabled="@(Model.Enable?"!disabled":"disabled")">@item.Value</radio>
                }
            }
        }
    </radio-group>
}
