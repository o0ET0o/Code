@using z.ERP.Web.Areas.Share.Render
@inherits z.ERP.Web.Areas.Share.ControlViewBase<ButtonRender>

@{
    if (Model.HasPermission)
    {
        <i-button id="@Model.Id"
                  icon="@Model.Icon" v-on:click="@Model.Click"                  
                  :disabled="@(Model.Enable?"!disabled":"disabled")"
                  :size="@Model.Size" 
                  >@Model.Text</i-button>
    }
}

@*type="@Model.Type"*@ 
@*v-show="@(Model.Isvisible ? "topbuttonVisible" : "!topbuttonVisible")"*@