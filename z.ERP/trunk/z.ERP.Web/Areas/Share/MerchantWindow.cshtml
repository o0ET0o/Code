@using z.ERP.Web.Areas.Share.Render
@inherits z.ERP.Web.Areas.Share.ControlViewBase<MerchantWindowRender>

<modal id="win_@Model.VueDom" v-model="@Model.vModel"
       title="@Model.Title"
       @@on-ok="ok">
    <row>
        <i-col span="2" class="RowTitle">
            ID
        </i-col>
        <i-col span="6">

            @{
                RenderControl(new TextBoxRender()
                {
                    Id = "testid",
                    vModel = "windowParam.MERCHANTID"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            名称
        </i-col>
        <i-col span="6">

            @{
                RenderControl(new TextBoxRender()
                {
                    Id = "testname",
                    vModel = "windowParam.NAME"
                });
            }
        </i-col>
    </row>
    @*<row>
        <i-table size="small" :border :columns="windowParam.payColDef" :data="windowParam.payDataDef" height="300"></i-table>
    </row>*@
</modal>


