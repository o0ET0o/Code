@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.DefineDetail
@inherits DefineDetailViewBase

@section baseParam{
    <row>
        <i-col span="5" class="RowTitle">
            门店
        </i-col>
        <i-col span="17">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "dataParam.BRANCHID",
                    ServiceMothod = m => m.branch(),
                    Enable = true

                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="5" class="RowTitle">
            赠品编号
        </i-col>
        <i-col span="17" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.ID",
                    Readonly = "true",
                });
            }
        </i-col>
        </ROW>
    <ROW>
        <i-col span="5" class="RowTitle">
            赠品名称
        </i-col>
        <i-col span="17" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.NAME",
                    //Enable = false,
                });
            }
        </i-col>
</ROW>
    <row>
        <i-col span="5" class="RowTitle">
            价格
        </i-col>
        <i-col span="17" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.PRICE",
                    type = "number",
                    //Enable = false,
                });
            }
        </i-col>
      
    </row>

    <row>
      <i-col span="5" class="RowTitle">
            状态
        </i-col>
        <i-col span="17" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.STATUSMC",
                    Enable = false,
                    Readonly = "true",
                });
            }
        </i-col>   
    </row>

}
