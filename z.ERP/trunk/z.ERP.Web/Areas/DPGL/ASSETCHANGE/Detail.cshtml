@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Detail;
@using z.ERP.Entities;
@using z.Extensions;
@using z.ERP.Entities.Enum
@inherits DetailLayout<ASSETCHANGEEntity> 

@section Title{
    @Html.Raw("详情");
}

@section btn{
    @{
        if (Model.STATUS == "0")
        {
            RenderControl(new ButtonRender()
            {
                Text = "审核"
            });
        }
        else
        {

        }
    }
}

@section content{
    <row>
        <i-col span="2" class="RowTitle">单据编号</i-col>
        <i-col span="4" class="RowText"> @Model.BILLID </i-col>
        <i-col span="2" class="RowTitle">门店</i-col>
        <i-col span="4" class="RowText"> @Model.BRANCHMC </i-col>
        <i-col span="2" class="RowTitle">状态</i-col>
        <i-col span="4" class="RowText"> @(Model.STATUS.ToEnum<支付方式类型>().ToLocalString()) </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">变更类型</i-col>
        <i-col span="4" class="RowText"> @Model.CHANGE_TYPE   </i-col>
        <i-col span="2" class="RowTitle">备注</i-col>
        <i-col span="4" class="RowText"> @Model.DESCRIPTION   </i-col>

    </row>
}
