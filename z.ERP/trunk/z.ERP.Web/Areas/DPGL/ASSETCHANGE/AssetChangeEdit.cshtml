@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.EditDetail;
@using z.ERP.Entities;
@inherits EditDetailViewBase<string>
@section baseParam{
<row>

    <i-col span="2" class="RowTitle">
        备注
    </i-col>
    <i-col span="14">
        @{
            RenderControl(new TextBoxRender()
            {
                vModel = "dataParam.DESCRIPTION"
            });
        }
    </i-col>
        <i-col span="2" class="RowTitle">
            状态
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<普通单据状态>()
                {
                    vModel = "dataParam.STATUS",
                    Enable = false
                });
            }
        </i-col>
    </row>

    <row>
        <i-col span="24">
            @{
                RenderControl(new ButtonRender()
                {
                    Click = "SelShop",
                    Text = "选择单元",
                    Enable = true,
                    Type = "primary",
                    Icon = "plus-circled"
                });
            }
            <i-table height="300" size="small" border="true"
                     :columns="screenParam.colDef" :data="dataParam.ASSETCHANGEITEM"></i-table>
        </i-col>
    </row>
}

@section pops{
    <row>
        <i-col>
            @{
                RenderControl(new PopsRender()
                {
                    vModel = "screenParam.showPopShop",
                    Src = "screenParam.srcPopShop",
                    Caption = "选择单元",
                    Width = "800"
                });
            }
        </i-col>
    </row>
}


