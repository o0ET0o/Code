                });
            }
        </i-col>*@

        <i-col span="2" class="RowTitle">合同类型</i-col>
        <i-col span="6">
        @*    @{
        RenderControl(new EnumCheckBoxListRender<合同类型>()
        {
            vModel = "searchParam.HTLX",
            MultiSelect = true
        });
    } *@

            @{
                RenderControl(new EnumDropDownListRender<合同类型>()
                {
                    vModel = "searchParam.HTLX"
                });
            }


        </i-col>

        <i-col span="2" class="RowTitle">商场</i-col>
        <i-col span="6">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.BRANCHID",
                    ServiceMothod = m => m.branch()
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">
            状态
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<合同状态>()
                {
                    vModel = "searchParam.STATUS"
                });
            }
        </i-col>
    </row>


    <row>
        <i-col span="2" class="RowTitle">资产代码</i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.SHOPDM"
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">品牌名称</i-col>
        <i-col span="6">
