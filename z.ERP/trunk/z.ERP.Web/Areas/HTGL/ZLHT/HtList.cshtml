            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.MERCHANTID"
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">商户名称</i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.NAME"
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">合同号</i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.CONTRACTID"
                });
            }
        </i-col>
    </row>
    <row>
        @*<i-col span="2" class="RowTitle">核算方式</i-col>
