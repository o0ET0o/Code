@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Edit;
@using z.ERP.Entities;
@inherits EditViewBase<string>
@section baseParam{
    <row>
        <i-col span="2" class="RowTitle">
            租约
        </i-col>
        <i-col span="6" class="RowText">
            <i-input readonly v-bind:icon="disabled? 'md-search':''"
                     v-model="dataParam.CONTRACTID" v-on:on-click="srchContract" v-bind:disabled="!disabled" />
        </i-col>
        <i-col span="2" class="RowTitle">
            商户
        </i-col>
        <i-col span="6" class="RowText">
            <i-input readonly v-model="dataParam.SHMC"  v-bind:disabled="!disabled" />
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            退铺日期
        </i-col>
        <i-col span="6" class="RowText">
           @{
               RenderControl(new DateBoxRender()
               {
                   vModel = "dataParam.FREEDATE"
               });
        }
        </i-col>
        <i-col span="2" class="RowTitle">
            状态
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<普通单据状态>()
                {
                    vModel = "dataParam.STATUS",
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            备注
        </i-col>
        <i-col span="14" class="RowText">
            <i-input type="textarea" v-model="dataParam.DESCRIPTION" clearable v-bind:disabled="!disabled" />
        </i-col>
    </row>
}
@section detailParam{
    <row>
        <i-col span="24">
            <yx-table v-bind:columns="screenParam.colDef" v-bind:height="300"
                      v-bind:data="dataParam.FREESHOPITEM" v-bind:disabled="!disabled" ref="refShop">
            </yx-table>
        </i-col>
    </row>
}
@section pops{
    @{
        RenderControl(new PopsRender()
        {
            vModel = "screenParam.showPopContract",
            Caption = "选择租约",
            Width = "900",
            Src = "screenParam.srcPopContract"
        });
    }
}

