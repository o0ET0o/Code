@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Search;
@inherits SearchViewBase
@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">单号</i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.BILLID"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">门店</i-col>
        <i-col span="6">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.BRANCHID",
                    ServiceMothod = m => m.branch(),
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            状态
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<普通单据状态>()
                {
                    vModel = "searchParam.STATUS",
                });
            }
        </i-col>
        </row>
        <row>
            <i-col span="2" class="RowTitle">
                @{
                    RenderControl(new ButtonRender()
                    {
                        Click = "SelMerchant",
                        Text = "商户",
                        Enable = true,
                        Type = "primary"
                    });
                }
            </i-col>
            <i-col span="2">
                @{
                    RenderControl(new TextBoxRender()
                    {
                        vModel = "searchParam.MERCHANTID"
                    });
                }
            </i-col>
            <i-col span="4">
                @{
                    RenderControl(new TextBoxRender()
                    {
                        vModel = "searchParam.MERCHANTNAME"
                    });
                }
            </i-col>
            <i-col span="2" class="RowTitle">
                @{
                    RenderControl(new ButtonRender()
                    {
                        Click = "SelContract",
                        Text = "租约",
                        Enable = true,
                        Type = "primary"
                    });
                }
            </i-col>
            <i-col span="6">

                @{
                    RenderControl(new TextBoxRender()
                    {
                        vModel = "searchParam.CONTRACTID"
                    });
                }
            </i-col>
            <i-col span="2" class="RowTitle">备注</i-col>
            <i-col span="6">
                @{
                    RenderControl(new TextBoxRender()
                    {
                        vModel = "searchParam.DESCRIPTION"
                    });
                }
            </i-col>
        </row>
        <row>
            <i-col span="2" class="RowTitle">
                @{
                    RenderControl(new ButtonRender()
                    {
                        Click = "SelSysuser",
                        Text = "登记人",
                        Enable = true,
                        Type = "primary"
                    });
                }
            </i-col>
            <i-col span="6">
                @{
                    RenderControl(new TextBoxRender()
                    {
                        vModel = "searchParam.REPORTERNAME"
                    });
                }
            </i-col>
            <i-col span="2" class="RowTitle">
                登记时间_起
            </i-col>
            <i-col span="6">
                @{
                    RenderControl(new DateBoxRender()
                    {
                        vModel = "searchParam.REPORTER_TIME_START"
                    });
                }
            </i-col>
            <i-col span="2" class="RowTitle">
                登记时间_止
            </i-col>
            <i-col span="6">
                @{
                    RenderControl(new DateBoxRender()
                    {
                        vModel = "searchParam.REPORTER_TIME_END"
                    });
                }
            </i-col>
        </row>
        <row>
            <i-col span="2" class="RowTitle">
                @{
                    RenderControl(new ButtonRender()
                    {
                        Click = "SelSysuser_sh",
                        Text = "审核人",
                        Enable = true,
                        Type = "primary"
                    });
                }
            </i-col>
            <i-col span="6">
                @{
                    RenderControl(new TextBoxRender()
                    {
                        vModel = "searchParam.VERIFYNAME"
                    });
                }
            </i-col>
            <i-col span="2" class="RowTitle">
                审核时间_起
            </i-col>
            <i-col span="6">
                @{
                    RenderControl(new DateBoxRender()
                    {
                        vModel = "searchParam.VERIFY_TIME_START"
                    });
                }
            </i-col>
            <i-col span="2" class="RowTitle">
                审核时间_止
            </i-col>
            <i-col span="6">
                @{
                    RenderControl(new DateBoxRender()
                    {
                        vModel = "searchParam.VERIFY_TIME_END"
                    });
                }
            </i-col>
        </row>
}


@section pops{
    <row>
        <i-col>
            @{
                RenderControl(new PopsRender()
                {
                    vModel = "screenParam.showPopMerchant",
                    Caption = "选择商户",
                    Width = "900",
                    Src = "screenParam.srcPopMerchant"
                });
            }
        </i-col>
    </row>
    <row>
        <i-col>
            @{
                RenderControl(new PopsRender()
                {
                    vModel = "screenParam.showPopSysuser",
                    Src = "screenParam.srcPopSysuser",
                    Caption = "选择人员",
                    Width = "800"
                });
            }
        </i-col>
    </row>
    <row>
        <i-col>
            @{
                RenderControl(new PopsRender()
                {
                    vModel = "screenParam.showPopContract",
                    Caption = "选择租约",
                    Width = "900",
                    Src = "screenParam.srcPopContract"
                });
            }
        </i-col>
    </row>

}