@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Detail;
@using z.ERP.Entities;
@using z.Extensions;
@using z.ERP.Entities.Enum
@using System.Data
@inherits DetailLayout<dynamic>

@section Title{
    @Html.Raw("详情");
}

@{
    var assetchange = ViewBag.assetchange;
    var assetchangeitem = ViewBag.assetchangeitem as DataTable;
}
@section btn{
    @{
        if (@assetchange.STATUS == "1")
        {
            RenderControl(new ButtonRender()
            {
                Text = "审核",
                Click = "exec",
            });
        }
    }
}

@section content{
    <row>
        <i-col span="2" class="RowTitle">单据编号</i-col>
        <i-col span="4" class="RowText"> @assetchange.BILLID </i-col>
        <i-col span="2" class="RowTitle">门店</i-col>
        <i-col span="4" class="RowText"> @assetchange.BRANCHNAME </i-col>
        <i-col span="2" class="RowTitle">状态</i-col>
        <i-col span="4" class="RowText"> @assetchange.STATUSMC</i-col>
    </row>
    <row>
        @*<i-col span="2" class="RowTitle">变更类型</i-col>
            <i-col span="4" class="RowText"> @assetchange.CHANGE_TYPE   </i-col>*@
        <i-col span="2" class="RowTitle">备注</i-col>
        <i-col span="16" class="RowText"> @assetchange.DISCRIPTION   </i-col>
    </row>
    <row>
        @{
            foreach (DataRow shop in assetchangeitem.Rows)
            {
                <row>
                    <i-col span="4" class="rowtitle">店铺代码(@shop["CODE"].ToString())</i-col>
                    <i-col span="4" class="rowtitle">原建筑面积(@shop["AREA_BUILD_OLD"].ToString())</i-col>
                    <i-col span="4" class="rowtitle">原使用面积(@shop["AREA_USABLE_OLD"].ToString())</i-col>
                    <i-col span="4" class="rowtitle">原租赁面积(@shop["AREA_RENTABLE_OLD"].ToString())</i-col>
                </row>
            }
        }
    </row>
}
@section foot{
    <script type="text/javascript">
        var ve = new Vue({
            el: '#detail_Main',
            data: {
                Mainpanel: 'condition',
                disabled:true
            },
            methods: {
                exec: function (event) {
                    event.stopPropagation();
                    var _self = this;
                    _.Ajax('ExecData', {
                        Data: {BILLID: @assetchange.BILLID},
                    }, function (data) {
                        _self.$Message.info("审核成功");
                        setTimeout(function () {
                            window.location.reload();
                        }, 100);
                    });
                }
            }
        });
    </script>
}
