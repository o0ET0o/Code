@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.EditDetail;
@inherits EditDetailViewBase<string>

@section head{

    @InitFiles(new string[] {
    "/Areas/Pop/PopMerchant.js",
});
}

@section baseParam{

<row>
    <i-col>
      @{
            RenderControl(new PopRender()
            {
                vModel = "dataParam.MERCHANTID",
                Caption = "商户查询",
                Width = "760",
                PopLx = "Merchant",
                CallBack = "MerchantBack",
                ParentObj = "screenParam.ParentMerchant"  
            });
        }
    </i-col>
    <i-col span="2" class="RowTitle">
        权债发生月
    </i-col>
    <i-col span="6">
        @{
            RenderControl(new TextBoxRender()
            {
                vModel = "dataParam.NIANYUE"
            });
        }
    </i-col>
    <i-col span="2" class="RowTitle">
        状态
    </i-col>
    <i-col span="6">
        @{
            RenderControl(new EnumDropDownListRender<普通单据状态>()
            {
                vModel = "dataParam.STATUS",
                Enable = false
            });
        }
    </i-col>
</row>

<row>
    <i-col span="2" class="RowTitle">
        收款方式
    </i-col>
    <i-col span="6">
        @{
            RenderControl(new ServiceDropDownListRender()
            {
                vModel = "dataParam.TYPE",
                ServiceMothod = m => m.pay(),
            });
        }
       @* @{
        RenderControl(new TextBoxRender()
        {
            vModel = "dataParam.TYPE"
        });
    }*@
    </i-col>
    <i-col span="2" class="RowTitle">
        收款金额
    </i-col>
    <i-col span="6">
        @{
            RenderControl(new TextBoxRender()
            {
                vModel = "dataParam.ALL_MONEY"
            });
        }
    </i-col>
    <i-col span="2" class="RowTitle">
        账户余额
    </i-col>
    <i-col span="6">
        @{
            RenderControl(new TextBoxRender()
            {
                vModel = "dataParam.ALL_MONEY",
                Enable = false
            });
        }
    </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            备注
        </i-col>
        <i-col span="22">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.DESCRIPTION"
                });
            }
        </i-col>
    </row>
    }




