@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Web.Areas.Layout.Search
@using z.ERP.Entities.Enum

@inherits SearchViewBase
@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">
            单号
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.BILLID"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            租约号
        </i-col>
        <i-col span="6" class="RowText">

            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.CONTRACTID"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            商户
        </i-col>
        <i-col span="6" class="RowText">            
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.MERCHANTID"
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            开始年月
        </i-col>
        <i-col span="6" class="RowText">
            <date-picker type="month" format="yyyyMM" v-bind:transfer="true" v-on:on-change="searchParam.NIANYUE_START=$event"
                         v-model="searchParam.NIANYUE_START"></date-picker>
        </i-col>
        <i-col span="2" class="RowTitle">
            结束年月
        </i-col>
        <i-col span="6" class="RowText">
            <date-picker type="month" format="yyyyMM" v-bind:transfer="true" v-on:on-change="searchParam.NIANYUE_END=$event"
                         v-model="searchParam.NIANYUE_END"></date-picker>
        </i-col>
        <i-col span="2" class="RowTitle">
            状态
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<结算单状态>
                {
                    vModel = "searchParam.STATUS",
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            登记人
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.REPORTER"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            登记时间_起
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.REPORTER_TIME_START"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            登记时间_止
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.REPORTER_TIME_END"
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            审核人
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.VERIFY"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            审核时间_起
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.VERIFY_TIME_START"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            审核时间_止
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "searchParam.VERIFY_TIME_END"
                });
            }
        </i-col>
    </row>

   

}
