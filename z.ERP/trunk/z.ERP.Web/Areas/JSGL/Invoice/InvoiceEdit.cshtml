@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.Edit;
@using z.ERP.Entities;
@inherits EditViewBase<string>
@section baseParam{
    <row>
        <i-col span="2" class="RowTitle"><span class="mustElement">*</span> 发票号码</i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.INVOICENUMBER",
                    blur = "NUMBERChange",
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle"><span class="mustElement">*</span> 
            发票类型
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new EnumDropDownListRender<发票类型>()
                {
                    vModel = "dataParam.TYPE",
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            <span class="mustElement">*</span>
            商户
        </i-col>
        <i-col span="6" class="RowText">
            <i-input readonly v-bind:icon="disabled? 'md-search':''"
                     v-model="dataParam.MERCHANTNAME" v-on:on-click="SelMerchant"  v-bind:disabled="!disabled" />
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle"><span class="mustElement">*</span> 发票金额</i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="dataParam.INVOICEAMOUNT" type="number" v-bind:disabled="!disabled" />
        </i-col>
        <i-col span="2" class="RowTitle"><span class="mustElement">*</span> 增值税金额</i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="dataParam.VATAMOUNT" type="number" v-bind:disabled="!disabled" />
        </i-col>
        <i-col span="2" class="RowTitle"><span class="mustElement">*</span> 
            开票日期
        </i-col>
        <i-col span="6" class="RowText">
            @{
                RenderControl(new DateBoxRender()
                {
                    vModel = "dataParam.INVOICEDATE"
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">录入人</i-col>
        <i-col span="6" class="RowText">
            <i-input v-model="dataParam.CREATENAME" disabled="disabled" />
        </i-col>
    </row>

}

@section pops{
    @{
        RenderControl(new PopsRender()
        {
            vModel = "screenParam.showPopMerchant",
            Caption = "选择商户",
            Width = "900",
            Src = "screenParam.srcPopMerchant"
        });
    }
}





