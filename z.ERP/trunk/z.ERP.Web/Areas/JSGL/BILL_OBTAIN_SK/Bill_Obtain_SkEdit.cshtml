@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.EditDetail;
@using z.ERP.Entities;
@inherits EditDetailViewBase<string>
@section baseParam{
    <row>
        <i-col span="2" class="RowTitle">
            @{
                RenderControl(new ButtonRender()
                {
                    Click = "SelMerchant",
                    Text = "商户",
                    Enable = true,
                    Type = "primary"
                });
            }
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.MERCHANTNAME",
                    Readonly = "true"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            商户余额
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.MERCHANT_MONEY",
                    Readonly = "true"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            状态
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<普通单据状态>()
                {
                    vModel = "dataParam.STATUS",
                    Enable = false
                });
            }
        </i-col>
    </row>
    <row>
        <i-col span="2" class="RowTitle">
            收款年月
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.NIANYUE"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            收款方式
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "dataParam.PAYID",
                    ServiceMothod = m => m.pay(),
                });
            }
        </i-col>
    </row>
    <row>        
        <i-col span="2" class="RowTitle">
            收款金额
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.ALL_MONEY"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            冲销预收款金额
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.ADVANCE_MONEY"
                });
            }
        </i-col>
        收款金额 + 冲销预收款金额 = 明细付款金额之和
    </row>

    <row>
        <i-col span="2" class="RowTitle">
            备注
        </i-col>
        <i-col span="22">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "dataParam.DESCRIPTION"
                });
            }
        </i-col>
    </row>
}
@section detailParam{
    <row>
        @{
            RenderControl(new ButtonRender()
            {
                Click = "SelBill",
                Text = "选择账单",
                Enable = true,
                Type = "primary",
                Icon = "plus-circled"
            });
        }
        <i-col span="24">
            <i-table size="small" :border="true"
                     :columns="screenParam.colDef" :data="dataParam.BILL_OBTAIN_ITEM"></i-table>
        </i-col>
    </row>
}

@section pops{
    <row>
        <i-col>
            @{
                RenderControl(new PopsRender()
                {
                    vModel = "screenParam.showPopBill",
                    Caption = "选择账单",
                    Width = "900",
                    Src = "screenParam.srcPopBill"
                });
            }
        </i-col>
    </row>
    <row>
        <i-col>
            @{
                RenderControl(new PopsRender()
                {
                    vModel = "screenParam.showPopMerchant",
                    Caption = "选择商户",
                    Width = "900",
                    Src = "screenParam.srcPopMerchant"
                });
            }
        </i-col>
    </row>
}

