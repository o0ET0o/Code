@using z.ERP.Web.Areas.Share.Render
@using z.ERP.Entities.Enum
@using z.ERP.Web.Areas.Layout.PopSearch;
@inherits PopSearchViewBase
@section conditionParam{
    <row>
        <i-col span="2" class="RowTitle">单号</i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.BILLID"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">门店</i-col>
        <i-col span="6">
            @{
                RenderControl(new ServiceDropDownListRender()
                {
                    vModel = "searchParam.BRANCHID",
                    ServiceMothod = m => m.branch(),
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">状态</i-col>
        <i-col span="6">
            @{
                RenderControl(new EnumDropDownListRender<结算单状态>()
                {
                    vModel = "searchParam.STATUS",
                });
            }
        </i-col>
        </row>
        <row>
            <i-col span="2" class="RowTitle">
                租约号
            </i-col>
            <i-col span="6">

                @{
                    RenderControl(new TextBoxRender()
                    {
                        vModel = "searchParam.CONTRACTID"
                    });
                }
            </i-col>
            <i-col span="2" class="RowTitle">
                商户
            </i-col>
            <i-col span="6">

                @{
                    RenderControl(new TextBoxRender()
                    {
                        vModel = "searchParam.MERCHANTID"
                    });
                }
            </i-col>
            <i-col span="2" class="RowTitle">
                类型
            </i-col>
            <i-col span="6">
                @{
                    RenderControl(new EnumDropDownListRender<账单类型>()
                    {
                        vModel = "searchParam.TYPE",
                    });
                }
            </i-col>
        </row>
    <row>
        <i-col span="2" class="RowTitle">
                @{
                    RenderControl(new ButtonRender()
                    {
                        Click = "SelFeeSubject",
                        Text = "收费项目",
                        Enable = true,
                        Type = "primary"
                    });
                }
        </i-col>
        <i-col span="6">

            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.TERMNAME"
                });
            }
        </i-col>
        <i-col span="2" class="RowTitle">
            债权发生月
        </i-col>
        <i-col span="6">

            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.NIANYUE"
                });
            }
        </i-col>

        <i-col span="2" class="RowTitle">
            收付实现月
        </i-col>
        <i-col span="6">
            @{
                RenderControl(new TextBoxRender()
                {
                    vModel = "searchParam.YEARMONTH"
                });
            }
        </i-col>
    </row>
        <row>
            <i-col span="2" class="RowTitle">
                登记人
            </i-col>
            <i-col span="6">
                @{
                    RenderControl(new TextBoxRender()
                    {
                        vModel = "searchParam.REPORTER"
                    });
                }
            </i-col>
            <i-col span="2" class="RowTitle">
                登记时间_起
            </i-col>
            <i-col span="6">
                @{
                    RenderControl(new DateBoxRender()
                    {
                        vModel = "searchParam.REPORTER_TIME_START"
                    });
                }
            </i-col>
            <i-col span="2" class="RowTitle">
                登记时间_止
            </i-col>
            <i-col span="6">
                @{
                    RenderControl(new DateBoxRender()
                    {
                        vModel = "searchParam.REPORTER_TIME_END"
                    });
                }
            </i-col>
        </row>
}
@section pops{
    <row>
        <i-col>
            @{
                RenderControl(new PopsRender()
                {
                    vModel = "screenParam.showPopFeeSubject",
                    Src = "screenParam.srcPopFeeSubject",
                    Caption = "选择收费项目",
                    Width = "800"
                });
            }
        </i-col>
    </row>
}