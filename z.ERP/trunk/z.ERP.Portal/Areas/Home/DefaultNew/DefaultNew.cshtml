@inherits ViewBase<dynamic>
@using z.MVC5.Views
@{
    Layout = null;
}
@{
    WebFiles = new string[] {
    "Content/Login/reset.css",
    "Areas/Home/DefaultNew/DefaultNew.css",
    "Content/jquery.min.js",
    "Content/zBase.js",
    "Content/AjaxHelper.js",
    "Content/JsHelper.js",
    "Content/PageBase.js",
    "Content/VUE/styles/iview.css",
    "Content/VUE/vue.js",
    "Content/VUE/iview.js"
    };
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>

    <script type="text/javascript">
        __ControllerUrl = '@ViewBag.ControllerUrl';
        __CommonControllerUrl = '@ViewBag.CommonControllerUrl';
        __PortalBaseUrl = '@ViewBag.BaseUrl';
    </script>
    @InitFiles(WebFiles)
    
</head>
<body style="background: rgb(238, 238, 238)">
    <div id="main">
        <Row style="background:#eee;padding:10px;height:260px">
            <i-col span="6">
                <div id="box1">
                    <Card :bordered="false">
                        <p slot="title">经营总况</p>
                            <i-table size="small" :height="tableH" :disabled-hover="true"
                                     :columns="box1colDef" :data="box1dataDef"></i-table>
                    </Card>
                </div>
            </i-col>
            <i-col span="6" offset="1">
                <div id="box2">
                    <Card :bordered="false">
                        <p slot="title">店铺状态</p>
                        <i-table size="small" :height="tableH" :disabled-hover="true"
                                 :columns="box2colDef" :data="box2dataDef">
                        </i-table>
                    </Card>
                </div>
            </i-col>
            <i-col span="10" offset="1">
                <div id="box3">
                    <Card :bordered="false">
                        <p slot="title">
                            商铺经营榜
                            <i-Select style="width:100px;float:right" size="small" v-on:on-change="box3datechange" placeholder="昨日">
                                <i-Option value="1" selected="selected">昨日</i-Option>
                                <i-Option value="2">本月</i-Option>
                                <i-Option value="3">上月</i-Option>
                            </i-Select>
                        </p>
                        <i-table size="small" :height="tableH" :disabled-hover="true"
                                 :columns="box3colDef" :data="box3dataDef">
                        </i-table>
                    </Card>
                </div>
            </i-col>
        </Row>
        <Row style="background:#eee;padding:10px;height:260px">
            <i-col span="6">
                <div id="box4">
                    <Card :bordered="false">
                        <p slot="title">待处理任务</p>
                    </Card>
                </div>
            </i-col>
            <i-col span="6" offset="1">
                <div id="box5">
                    <Card :bordered="false">
                        <p slot="title">预警</p>
                    </Card>
                </div>
            </i-col>
            <i-col span="10" offset="1">
                <div id="box6">
                    <Card :bordered="false">
                        <p slot="title">
                            业态经营榜
                            <i-Select style="width:100px;float:right" size="small" v-on:on-change="box6datechange" placeholder="昨日">
                                <i-Option value="1" selected="selected">昨日</i-Option>
                                <i-Option value="2">本月</i-Option>
                                <i-Option value="3">上月</i-Option>
                            </i-Select>
                        </p>
                        <i-table size="small" :height="tableH" :disabled-hover="true"
                                 :columns="box6colDef" :data="box6dataDef">
                        </i-table>
                    </Card>
                </div>
            </i-col>
        </Row>
    </div>
</body>
</html>
@InitThisJs()